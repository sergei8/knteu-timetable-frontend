    <name>KNTEU timetable</name>
    <description>Розклад КНТЕУ</description>
    <author email="shkliarskiy@gmail.com" href="http://shkliarskiy.moodlecloud.com">Avas</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="http://ionic.local/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
